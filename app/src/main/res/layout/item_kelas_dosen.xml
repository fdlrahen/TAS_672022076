<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nama_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kelas - Kode Matkul"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_dosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Dosen: Nama Dosen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hari_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hari, Jam"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ruangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ruangan: Ruangan X"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_tambah_nilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Nilai"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/design_default_color_primary"
                android:textColor="@android:color/white"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btn_absensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Nilai"
                android:backgroundTint="@color/design_default_color_secondary"
                android:textColor="@android:color/white"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>