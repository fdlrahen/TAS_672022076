<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Tambah Jadwal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="16dp" />

        <!-- CardView sebagai container form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/edtHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Hari"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/edtJam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Jam"
                    android:focusable="false"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/edtRuangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Ruangan"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinnerMatkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinnerDosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/edtMahasiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Mahasiswa"
                    android:focusable="false"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSimpanJadwal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan Jadwal"
                    app:cornerRadius="12dp"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#2196F3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
